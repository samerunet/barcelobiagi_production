generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  MANAGER
  VIEWER
}

enum ProductStatus {
  ACTIVE
  HIDDEN
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  CANCELED
}

enum DeliveryStatus {
  NOT_REQUIRED
  PENDING
  SHIPPED
  DELIVERED
  RETURNED
  CANCELED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  role         UserRole @default(MANAGER)
  isActive     Boolean  @default(true)
  passwordHash String
  lastLoginAt  DateTime?
  passwordResetToken   String?
  passwordResetExpires DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  managedOrders Order[] @relation("ManagerOrders")
}

model Customer {
  id               String   @id @default(cuid())
  email            String   @unique
  phone            String?
  firstName        String?
  lastName         String?
  passwordHash     String?
  passwordResetToken   String?
  passwordResetExpires DateTime?
  marketingConsent Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  orders Order[]
}

model Category {
  id            String   @id @default(cuid())
  slug          String   @unique
  nameRu        String
  nameEn        String
  descriptionRu String?
  descriptionEn String?
  sortOrder     Int      @default(0)
  isActive      Boolean  @default(true)
  showOnHome    Boolean  @default(true)

  products Product[]
}

model Product {
  id                String          @id @default(cuid())
  sku               String          @unique
  nameRu            String
  nameEn            String
  descriptionRu     String?
  descriptionEn     String?
  categoryId        String
  category          Category        @relation(fields: [categoryId], references: [id])
  status            ProductStatus   @default(ACTIVE)
  featured          Boolean         @default(false)
  price             Decimal         @db.Decimal(10, 2)
  oldPrice          Decimal?        @db.Decimal(10, 2)
  stockTotal        Int             @default(0)
  stockLowThreshold Int             @default(3)
  images            ProductImage[]
  variants          ProductVariant[]
  tags              ProductTag[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  orderItems OrderItem[]
}

model ProductVariant {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  label     String
  sku       String?
  stock     Int      @default(0)
  price     Decimal? @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItem[] @relation("VariantOrderItems")

  @@unique([productId, label])
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])

  imageKey  String
  isMain    Boolean @default(false)
  sortOrder Int     @default(0)
}

model ProductTag {
  id      String    @id @default(cuid())
  slug    String    @unique
  labelRu String
  labelEn String

  products Product[]
}

model Order {
  id             String         @id @default(cuid())
  orderNumber    String         @unique
  customerId     String
  customer       Customer       @relation(fields: [customerId], references: [id])
  managerId      String?
  manager        User?          @relation("ManagerOrders", fields: [managerId], references: [id])
  paymentStatus  PaymentStatus  @default(PENDING)
  deliveryStatus DeliveryStatus @default(PENDING)
  totalAmount    Decimal        @db.Decimal(10, 2)
  currency       String         @default("RUB")
  items          OrderItem[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  variantId  String?
  variant    ProductVariant? @relation("VariantOrderItems", fields: [variantId], references: [id])
  quantity   Int
  unitPrice  Decimal  @db.Decimal(10, 2)
  createdAt  DateTime @default(now())
}

model Setting {
  key       String   @id
  value     String
  group     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContentBlock {
  id      String   @id @default(cuid())
  key     String   @unique
  titleRu String?
  titleEn String?
  bodyRu  String?
  bodyEn  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
